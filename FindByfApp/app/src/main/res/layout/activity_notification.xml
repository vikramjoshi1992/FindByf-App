<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.FindByf.android.myNotification">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4ccbff"
        android:paddingLeft="10dp">
        <Button
            android:id="@+id/button_Back"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="14dip"
            android:background="#4ccbff"
            />
        <Button
            android:id="@+id/Button_notification"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="My Notification"
            android:background="#4ccbff"
            android:gravity="left"
            android:layout_marginLeft="70dip"
            android:textSize="14dip"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:id="@+id/list_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notification_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nNo Notification yet !!"
                android:gravity="center"/>
            <TextView
                    android:id="@+id/textview_notification_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>



    </ScrollView>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
